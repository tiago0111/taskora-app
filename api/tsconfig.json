{
  "compilerOptions": {
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "module": "CommonJS",
    "esModuleInterop": true,
    "target": "es2020",
    "moduleResolution": "node",
    "outDir": "dist",
    "sourceMap": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "types": ["node"] // Adicionei a referência a 'node' aqui
  },
  "include": ["src/**/*", "env.d.ts", "prisma/seed.ts"] // Incluí o seeder aqui
}